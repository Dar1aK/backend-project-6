extends ../layouts/application.pug

block header
  .d-flex.flex-column
    = t('views.users.title')

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th= t('views.users.actions')
    tbody
      each user in users
        tr
          td= user.id
          td= `${user.firstName} ${user.lastName}`
          td= formatDate(user.createdAt)
          td
            .d-flex.flex-wrap
              a.btn.btn-primary.me-1(href=`/users/${user.id}/edit`)= t('views.users.edit')
              +buttonTo(`users/${user.id}`, 'delete')(class="btn btn-danger" value=t('views.users.delete'))
