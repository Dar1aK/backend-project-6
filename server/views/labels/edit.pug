extends ../layouts/application.pug

block header
  = t('views.labels.editTitle')

block content
  +formFor()(action=`/labels/${id}` method='post')
    +input(label, 'name', t('views.labels.form.name'), errors)(type="text")
    input(name="_method" type="hidden" value='patch')
    +submit(label)(value=t('views.labels.edit'))
